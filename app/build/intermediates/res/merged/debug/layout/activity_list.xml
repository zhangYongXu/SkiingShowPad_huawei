<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include
        android:id="@+id/inTitle"
        layout="@layout/layout_top_navigation" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/activity_list_bg"
            android:layout_marginBottom="60dp">

            <TextView
                android:id="@+id/listTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="@dimen/textSize20"
                android:text="儿童单板教程"
                android:paddingRight="20dp"
                android:layout_marginTop="80dp"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textColor="#5fb5c9"/>


            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_marginTop="100dp"
                android:scaleType="fitXY"
                android:src="@mipmap/lis_activity_list_bg"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="170dp"
                android:layout_marginTop="30dp"
                android:src="@mipmap/activity_list_jixiangwu_1"/>


            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="match_parent"
                android:layout_marginTop="140dp"
                android:paddingBottom="200dp"
                android:divider="@null"
                android:background="#00000000">

            </ListView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/activity_list_jixiangwu_2"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">
            <cn.geeksworld.skiingshow.views.MyGiftView
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:gif="@mipmap/list_activity_xiao_xiong"
                android:background="#00000000"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/appBottomNavigationViewHeight"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="0dp"
                android:src="@mipmap/activity_bottom_back_bg"
                android:scaleType="fitXY" />
            <ImageButton
                android:layout_width="@dimen/appBottomNavigationViewHeight"
                android:layout_height="@dimen/appBottomNavigationViewHeight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_back_button"
                android:onClick="backButtonClicked"
                android:background="#00000000"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/list_activity_up_arrow_icon"
                android:scaleType="fitCenter"
                android:background="#00000000"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="上滑手势"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:gravity="center"
                android:textSize="@dimen/textSize18"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>

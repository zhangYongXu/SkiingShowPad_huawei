<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.geeksworld.skiingshow.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <cn.geeksworld.skiingshow.views.MyRollPagerView
            android:id="@+id/pageViewPagerHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rollviewpager_hint_paddingLeft="5dp"
            app:rollviewpager_hint_paddingRight="5dp"
            app:rollviewpager_hint_paddingTop="5dp"
            app:rollviewpager_play_delay="3000" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:src="@mipmap/hom_page_bg_new"-->
            <!--android:scaleType="fitXY" />-->
        <!--<cn.geeksworld.skiingshow.views.MyGiftView-->
            <!--android:layout_centerInParent="true"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--app:gif="@mipmap/home_logo"-->
            <!--android:background="#00000000"/>-->
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>
        <Button
            android:id="@+id/homeButton"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="homeButtonClicked"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <cn.geeksworld.skiingshow.views.MyRollPagerView
            android:id="@+id/pageViewPagerFooter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rollviewpager_hint_paddingLeft="5dp"
            app:rollviewpager_hint_paddingRight="5dp"
            app:rollviewpager_hint_paddingTop="5dp"
            app:rollviewpager_play_delay="3000" />
    </RelativeLayout>


</LinearLayout>

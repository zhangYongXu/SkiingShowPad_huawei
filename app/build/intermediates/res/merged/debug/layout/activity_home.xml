<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/inTitle"
        layout="@layout/layout_top_navigation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inTitle"
        android:orientation="vertical"
        android:paddingBottom="10dp">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="600dp">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000">
                        <TableRow
                            android:layout_weight="1">

                            <ImageButton
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="#00000000"
                                android:scaleType="fitXY"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:src="@drawable/home_buttom_item_tong_yong_shuang"
                                android:onClick="homeToListButtonErTongShuangClicked"/>
                            <ImageButton
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="#00000000"
                                android:scaleType="fitXY"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:src="@drawable/home_buttom_item_er_tong_shuang"
                                android:onClick="homeToListButtonChengRenShuangClicked"/>
                        </TableRow>

                        <TableRow
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="#00000000"
                                android:scaleType="fitXY"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:src="@drawable/home_buttom_item_er_tong_dan"
                                android:onClick="homeToListButtonErTongDanClicked" />
                            <ImageButton
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="#00000000"
                                android:scaleType="fitXY"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:src="@drawable/home_buttom_item_tong_yong_dan"
                                android:onClick="homeToListButtonChengRenDanClicked"/>

                        </TableRow>
                    </TableLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="277dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/moreContentImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/activity_home_more_content"
                        android:onClick="moreContentImageViewClicked"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="97dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/bImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/activity_home_hua_xue_zhi_shi_da_jiang_tang"/>

                </RelativeLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


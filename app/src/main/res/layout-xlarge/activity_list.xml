<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/inTitle"
        layout="@layout/layout_top_navigation" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/activity_list_bg"
            android:layout_marginBottom="@dimen/appBottomNavigationViewHeightXLarge">

            <TextView
                android:id="@+id/listTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/textSize30"
                android:text="儿童单板教程"
                android:paddingRight="40dp"
                android:layout_marginTop="120dp"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textColor="#5fb5c9"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_marginTop="135dp"
                android:scaleType="fitXY"
                android:src="@mipmap/lis_activity_list_bg"/>



            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="35dp"
                android:layout_height="match_parent"
                android:layout_marginTop="190dp"
                android:paddingBottom="250dp"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:background="#00000000">

            </ListView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginLeft="400dp"
                android:layout_marginTop="80dp"
                android:src="@mipmap/activity_list_jixiangwu_1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:paddingBottom="15dp"
                android:layout_marginLeft="90dp"
                android:src="@mipmap/activity_list_jixiangwu_2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#00000000">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/appBottomNavigationViewHeightXLarge"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="0dp"
                android:src="@mipmap/activity_bottom_back_bg"
                android:scaleType="fitXY" />
            <ImageButton
                android:layout_width="@dimen/appBottomNavigationViewHeightXLarge"
                android:layout_height="@dimen/appBottomNavigationViewHeightXLarge"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_back_button"
                android:onClick="backButtonClicked"
                android:background="#00000000"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:paddingBottom="30dp"
                android:src="@mipmap/list_activity_up_arrow_icon"
                android:scaleType="fitXY"
                android:background="#00000000"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="上滑手势"
                android:layout_centerInParent="true"
                android:paddingTop="30dp"
                android:background="#00000000"
                android:gravity="center"
                android:textSize="@dimen/textSize18"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>

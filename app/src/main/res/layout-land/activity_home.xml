<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#990044"
            >
            <TableRow
                android:layout_weight="1">
                <ImageButton
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#00ff44"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:src="@drawable/home_buttom_item_er_tong_dan"
                    android:onClick="homeToListButtonErTongDanClicked"
                    android:elevation="0dp" />
                <ImageButton
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:src="@drawable/home_buttom_item_tong_yong_shuang"
                    android:onClick="homeToListButtonErTongShuangClicked"/>
            </TableRow>

           <TableRow
               android:layout_weight="1">
               <ImageButton
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   android:background="#00000000"
                   android:scaleType="fitXY"
                   android:layout_weight="1"
                   android:src="@drawable/home_buttom_item_tong_yong_dan"
                   android:onClick="homeToListButtonChengRenDanClicked"/>
               <ImageButton
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   android:background="#00000000"
                   android:scaleType="fitXY"
                   android:layout_weight="1"
                   android:src="@drawable/home_buttom_item_er_tong_shuang"
                   android:onClick="homeToListButtonChengRenShuangClicked"/>
           </TableRow>


        </TableLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/geng_duo_nei_rong_jing_qing_qi_dai"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/bImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:scaleType="fitXY"
            android:src="@mipmap/hua_xue_zhi_shi_jiang_tang"/>
        <Button
            android:id="@+id/homeButton"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:onClick="toZhiShiJiangTangButtonClicked" />

    </RelativeLayout>

</LinearLayout>
